extends ../layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/product.css")

block content 
    form.product-form(action= edit==="true"? "/edit-product/"+ product.id : "/add-product", method="POST")
        .form-control
            label Title
            input#title(type="text", name="title" , value= edit==="true"? product.title: "")
        .form-control
            label Image URL
            input#title(type="text", name="imageURL", value= edit==="true"? product.imageURL: "")
        .form-control
            label Price
            input#title(type="number", name="price", value= edit==="true"? product.price: "")
        .form-control
            label Description
            textarea(rows=5,name="description")  #{edit? product.description : ""}
        if(edit==="true")
            button.btn(type="submit") Update Product
        else 
            button.btn(type="submit") Add Product
