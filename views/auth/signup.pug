extends ../layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/product.css")

block content
    if error
        .userMessage.userMessage-error #{error} 
    form.product-form(action="/signup", method="POST")
        .form-control
            label Name
            input#title(type="text", name="name")
        .form-control
            label E-Mail
            input#title(type="email", name="email")
        .form-control
            label Password
            input#title(type="password", name="password")
        .form-control
            label Confirm Password
            input#title(type="password", name="confirmpassword")
        input(type="hidden" name="_csrf" value= csrfToken )
        button.btn(type="submit") SignUp